{
  "name": "@che/ui-kit",
  "version": "0.0.0",
  "description": "Cherehapa's UI Kit test",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "pre-commit": "yarn lint --quiet",
    "postinstall": "yarn lerna run postinstall",
    "lint": "tsc --noEmit && eslint \"packages/**/{src,stories,test}/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "yarn lint --fix --quiet",
    "compile": "yarn lerna run compile",
    "clean": "yarn lerna run clean",
    "build": "yarn clean && yarn compile",
    "build:storybook": "build-storybook -c .storybook -o storybook-static --quiet",
    "deploy": "bash ./copy-to-publish.sh && bash ./publish.sh",
    "storybook": "start-storybook -p 9009",
    "install:ci": "yarn install --no-progress --frozen-lockfile",
    "lerna:publish": "lerna publish --yes --include-merged-tags --no-verify-access --conventional-commits --no-commit-hooks -m \"chore(release): Publish\"",
    "push:tags": "git push --follow-tags --no-verify"
  },
  "author": "Cherehapa",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "rollup-plugin-postcss": "^4.0.2",
    "@rollup/plugin-image": "^2.1.1",
    "@testing-library/react": "^13.3.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/builder-webpack5": "^6.5.9",
    "@storybook/cli": "^6.5.9",
    "@storybook/manager-webpack5": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react-hooks": "next",
    "husky": "^8.0.1",
    "lerna": "^5.1.2",
    "lint-staged": "^13.0.1",
    "prettier": "2.7.0",
    "rimraf": "^3.0.2",
    "storybook": "^6.5.9",
    "ts-loader": "^9.3.0",
    "tsdx": "^0.14.1",
    "typescript": "^4.7.3",
    "color": "^4.2.0",
    "webpack": "^5.73.0"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-jss": "^10.9.0"
  },
  "resolutions": {
    "typescript": "4.7.3"
  }
}
